@using NPORT.Models.ViewModels.User
@{ 
    var list = NPORT.Database.XMLDatabase.Users.GetList();
}

@{ ViewBag.Title = "UserList"; }
<h2>UserList</h2>
<div class="user-list">
<table>
    <tr>
        <th>Nickname</th>
        <th>Role</th>
        <th></th>
    </tr>
@foreach( var user in list )
{
    <tr>
        <td>@user.UserName</td>
        <td>@user.GetRole()</td>
        <td>@Html.ActionLink("Details", "Details", "User", new { id = user.Id }, new { @class = "btn" } )</td>
    </tr>
}
</table>
</div>
